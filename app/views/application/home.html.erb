<div id="container-fluid">
  <div class="row">
    <div class="col-lg" style="height:600px;width:120px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">
      <p style="border-style: solid;"><%= link_to "Create Team", new_team_path %></p>
      <% @current_user.teams.each do |team| %>
        <%=link_to "#{team.name}", team_path(team) %><br><br>
        <% end %>
    </div>
    <div class="col-lg-8" style="height:600px;width:120px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">
      <p style="border-style: solid;"><%= link_to "Create Project", new_project_path %></p>
        <%= link_to "#{Project.all.last.title}", project_path(Project.all.last) unless Project.all == []%>
    </div>
    <div class="col-lg" style="height:600px;width:120px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">
      <p style="border-style: solid;">Company Activity</p>
    </div>
  </div>
</div>