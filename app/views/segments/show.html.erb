<h1><%= @segment.title %></h1>
<h3><%= @segment.project.title %></h3>
Assigned Team: <%= @segment.team.name %><br><br>

<% @segment.tasks.each do |task| %>
    <% if !task.id.nil? || !task.assigned_user_id.nil? %>
    Task: <%= task.title %>,
    Assigned Team Member: <%= link_to "#{task.assigned_user.full_name}", user_path(task.assigned_user) %> - <%= task.position.title %>
    <% end %><br><br>
<% end %>

<%= link_to "Add Tasks", segment_path(@segment, :show_task_form => true) unless @task %>

<%= render :partial => 'tasks/form', :locals => { :task => @task } if @task %>

<%= link_to "Add User", segment_path(@segment, :show_task_and_user_form => true) if @task && @user.nil? %>
