<div id="container-fluid">
  <div class="row">
    <div class="col-lg" style="border:1px solid #ccc;overflow:auto;">
    <div class="<%=display_progress(@task)%>-col-content">

    <h1><%= @task.title %></h1>
    <%= link_to "Update Task", edit_admin_segment_task_path(@task) %>&nbsp&nbsp
    <%= link_to "Delete Task", [:admin, @segment, @task], confirm: "Are you sure?", :method => :delete %><br><br>
    <%= render :partial => "completed_form" %>
    <%= @task.description %><br>
    Assigned Team Member: <%= link_to "#{@task.assigned_user.full_name}", admin_team_user_path(@task.assigned_user.team, @task.assigned_user) %><br><br>

      </div>
    </div>
  </div>
</div>

<%= render :partial => 'admin/task_comments/form', :locals => { :subject => @task } %>

