<%= form_for [:team_leader, @project.project_comments.build] do |comment_builder| %>
    <%= comment_builder.hidden_field :project_id, :value => @project.id %>
    Comment on this <%= @project.class %><br>
    <%= comment_builder.text_area :content %><br>
    
    <%= comment_builder.submit "Submit Comment" %>
<% end %>