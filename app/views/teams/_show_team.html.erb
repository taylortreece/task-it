<% if !@team.positions.empty? %>
<% @team.positions.each do |position| %>
    <% if !position.id.nil? && !position.assigned_user.nil? %> <!-- take out one conditional after testing is complete -->
        <p style="font-size: 20px;"><%= link_to "#{position.assigned_user.full_name}", team_user_path(@team.id, position.assigned_user.id) %> 
        - <%= position.title %></p>
        <%= position.assigned_user.email %><br>
        <%= link_to "View #{position.assigned_user.first_name}'s active tasks", team_user_path(@team.id, position.assigned_user.id) %>
    <% end %><br><br>
  <% end %>
<% else %>
    <p>You don't have any members in this team.</p>
<% end %>