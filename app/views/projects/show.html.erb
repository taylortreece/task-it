<h1><%= @project.title %></h1>
<%= @project.deadline %><br><br>
<%= @project.description %><br><br>

<%= link_to "Update Project", edit_project_path(@project) %><br><br>
<%= link_to "Delete Project", @project, :method => :delete %><br><br>

<%= render :partial => "completed_form" %><br>

<%= render :partial => "show_segments" %>

<br><br><%= link_to "Add Segments", project_path(@project, :show_segment_form => true ) unless @segment %>

<%= render :partial => 'segments/form', :locals => { :segment => @segment } if @segment %>

<%= link_to "Add Team", project_path(@project, :show_segment_and_team_form => true) if @segment && @team.nil? %>

<%= render :partial => 'project_comments/form', :locals => { :subject => @project } %>

<br><%= render :partial => "show_comments" %>
