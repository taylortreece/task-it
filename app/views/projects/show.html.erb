<h1><%= @project.title %><br><br></h1>
<%= @project.deadline %><br><br>
<%= @project.description %><br><br>

    <% if @project.segments == [] %>
        <p>You have no segments for this project</p>
    <% else %>
         <% @project.segments.each do |segment| %>
            <%=link_to "#{segment.title}", project_segment_path(@project.id, segment.id) %><br><br>
            <%= segment.description %>
        <% end %>
    <% end %>

<br><br><%= link_to "Add Segments", project_path(@project, :show_segment_form => true ) unless @segment %>

<%= render :partial => 'segments/form', :locals => { :segment => @segment } if @segment %>

<%= link_to "Add Team", project_path(@project, :show_segment_and_team_form => true) if @segment && @team.nil? %>

<%= render :partial => 'project_comments/form', :locals => { :subject => @project } %>

<br><br>Comments: <br><br>

<% @project.project_comments.each do |comment| %>
  <% if @project.project_comments.empty? %>
    <p>There are no comments to view on this post. <%= link_to "Create Comment", new_project_comment_path %>
  <% else %>
      <% if !comment.id.nil? || !comment.content.nil?%>
        <%= comment.user.full_name %><br>
        <%= comment.content %>
    <% end %>
  <% end %>
<% end %>