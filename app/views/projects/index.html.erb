<ul style="text-align: center;">
    <strong><li style="font-size: 20px;"><%= link_to "#{@current_user.user_company.name}'s Projects", projects_path %></li></strong>
    <li><%= link_to "Completed Projects", projects_path(:project_index_link => "complete") %></li>
    <li><%= link_to "Incomplete Projects", projects_path(:project_index_link => "incomplete") %></li>
  </ul>

<% if @project_index_links == "complete" %>
    <%= render :partial => "projects/show_complete_projects" %>
<% elsif @project_index_links == "incomplete" %>
    <%= render :partial => "projects/show_incomplete_projects" %>
<% else %>
    <%= render :partial => "projects/index_form" %>
<% end %>